@model VerificationViewModel
@{
    ViewBag.Title = "Home";
}
<div class="jumbotron">
    <h1>Upcoming Events</h1>
    <p class="lead">
        Please provide your SQL Server IP address to test the connection to the SQL Server Virtual Machine:
    </p>
    @using (Html.BeginForm())
    {
        <div class="form-group">
            @Html.LabelFor(model => model.IPAddressInput)
            @Html.TextBoxFor(model => model.IPAddressInput, new { @class = "form-control" })
        </div>
        <button type="submit" class="btn btn-default">Verify</button>
    }
</div>